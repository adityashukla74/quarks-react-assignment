{
  "env": {
      "browser": true,
      "es2021": true,
      "jest/globals": true
  },
  "extends": [
      "plugin:react/recommended",
      "plugin:jest/recommended",
      "airbnb",
      "prettier"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": ["react", "jest"],
  "rules": {
      "no-underscore-dangle": 0,
      "testing-library/no-unnecessary-act": ["error", {"isStrict": false}],
      "import/extensions": [
          "error",
          "ignorePackages",
          {
              "js": "always",
              "jsx": "always"
          }
      ]
  }
}